void	Measure_GPC()
{
	VDD_Set = 0;
	do
	{
		GPC_Init();
		if(!GPC_out)
		{
			GPC_3_0_V_sleep_count++;
			if( GPC_3_0_V_sleep_count >= GPC_3_0_V_count_num )
			{
				GPC_3_0_V_sleep_count = 0;

			}
		}
		else
