//注：选择的通道需设置为输入，无上拉、下拉电阻、无数字输入使能；
void	ADC_init()
{
	$ ADCM 12bit,/8;			//时钟源选择（系统时钟/X）
 	$ ADCRGC 2V;		//参考高电压为VDD
//	$ ADCRGC VDD;		//参考高电压为VDD
	$ ADCC	Enable,PB.2 ;
	.delay 400;			//延时400us
	AD_START = 1;		//开始ADC转换
//	ADC_channel = 1;
}

void ADC_deal()
{
	ADC_channel++;
	#if 1
		if( ADC_channel >= 4 + 2 + 1 )
			ADC_channel = 1;
	#else
		if( ADC_channel >= 2 + 1 )
			ADC_channel = 1;
	#endif

		if( ADC_channel >= 4 + 1 )
	{
		$ ADCC	Enable,PB.1 ;
		if( ADC_channel == 4 + 1 )
		{
			old_adc  = 0;
			cur_adc  = 0;
			FS_3 = LED_OFF;
		}
		else
			FS_3 = LED_ON;
		FS_1 = LED_OFF;
		FS_2 = LED_OFF;				
	}
	else if( ADC_channel >= 2 + 1 )
	{
		$ ADCC	Enable,PB.0 ;
		if( ADC_channel == 2 + 1 )
		{
			old_adc  = 0;
			cur_adc  = 0;
			FS_2 = LED_OFF;
		}
		else
			FS_2 = LED_ON;
		FS_1 = LED_OFF;
		FS_3 = LED_OFF;					
	}
	else if( ADC_channel >= 0 + 1 )
	{
		$ ADCC	Enable,PB.2 ;
		if( ADC_channel == 0 + 1 )
		{
			old_adc  = 0;
			cur_adc  = 0;
			FS_1 = LED_OFF;
		}
		else
			FS_1 = LED_ON;
		FS_3 = LED_OFF;
		FS_2 = LED_OFF;		
	}

	.delay 1600;			//延时400us

	AD_START = 1;		//开始ADC转换

	disgint;
	while(!AD_DONE)		//等待ADC转换结果
		NULL;
	engint;

	cur_adc = ADCRH;

	if( ADC_channel == 2 || ADC_channel == 4 || ADC_channel == 6 )
	{
		if( cur_adc >= old_adc )
		{
			cur_adc_error  = cur_adc - old_adc;
		}
		else
		{
			cur_adc_error  = old_adc - cur_adc;
		}
	}

		if( ADC_channel == 6 + 0 )
	{
		if( cur_adc_error <= g_comval_sensitivity_Min )//PB.0
		{
 			motor_3_start_F = 0;//	motor_3 = LED_OFF; //stop
			motor_3_taiqi_F = 1;
		}
		if( cur_adc_error >= g_comval_sensitivity_Max )//PB.0
		{
			if( motor_1_start_F == 0 && motor_2_start_F == 0 && motor_3_start_F == 0 )
			{
				if( motor_3_taiqi_F)
				{
					motor_3_taiqi_F = 0;
					motor_3_start_F   = 1;//motor_3 = LED_ON; //start
					short_mode_init_F = 1;
					if( motor_work_time_limit_F )
						Time_mode = 60;
				}
			}
		}
	}
	else if( ADC_channel == 4 + 0 )
	{
		if( cur_adc_error <= g_comval_sensitivity_Min )//PB.0
		{
 			motor_2_start_F = 0;//motor_2 = LED_OFF; //stop	
			motor_2_taiqi_F = 1;
		}
		if( cur_adc_error >= g_comval_sensitivity_Max )//PB.0
		{
			if( motor_1_start_F == 0 && motor_2_start_F == 0 && motor_3_start_F == 0 )
			{
				if( motor_2_taiqi_F)
				{
					motor_2_taiqi_F = 0;
					motor_2_start_F   = 1;//motor_3 = LED_ON; //start
					short_mode_init_F = 1;
					if( motor_work_time_limit_F )
						Time_mode = 10;
				}
			}
		}
	}
	else if( ADC_channel == 2 + 0 )
	{
		if( cur_adc_error <= g_comval_sensitivity_Min )//PB.0
		{
  			motor_1_start_F = 0;//motor_1 = LED_OFF; //stop	
			motor_1_taiqi_F = 1;
		}
		if( cur_adc_error >= g_comval_sensitivity_Max )//PB.0
		{
			if( motor_1_start_F == 0 && motor_2_start_F == 0 && motor_3_start_F == 0 )
			{
				if( motor_1_taiqi_F)
				{
					motor_1_taiqi_F = 0;
					motor_1_start_F   = 1;//motor_3 = LED_ON; //start
					short_mode_init_F = 1;
					if( motor_work_time_limit_F )
						Time_mode = 18;
				}
			}
		}
	}
	old_adc  			 = cur_adc;

	#if time_test // #else #endif
		if( motor_1_start_F || motor_2_start_F || motor_3_start_F  )
		{
		//	shengya = 1;
			$ TM2S 8BIT,/1,/32;
		}
		else
		{
		//	shengya = 0;
		}
	#else
		if( motor_1_start_F || motor_2_start_F || motor_3_start_F  )
		{
			shengya = 1;
			$ TM2S 8BIT,/1,/32;
		}
		else
		{
//			shengya = 0;
		}
	#endif
}

