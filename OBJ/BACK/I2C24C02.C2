void Delay10ms(void)
{
	disgint;
	word i1=5000;
	while(i1--)
	{
		nop;
	}
	engint;
}

void Start()
{
	SDA=1;
	Delay10us();
	SCL=1;
	Delay10us();
	SDA=0;
	Delay10us();
	SCL=0;
	Delay10us();
}
void Stop()
{

	SDA=0;
	Delay10us();
	SCL=1;
	Delay10us();
	SDA=1;
	Delay10us();
}



void ACK()
{
   SDA=0;
		Delay10us();

   SCL=1;
		Delay10us();

   SCL=0;
		Delay10us();

   SDA=1;
 		Delay10us();
}
void NoAck()
{
   SDA=1;
		Delay10us();

   SCL=1;
		Delay10us();

   SCL=0;
		Delay10us();

}
void Write8Bit()
{
	a1=0;
   while(a1<8)
   {
	    a1++;
		if(I2C_dat_7)
			SDA=1;
		else
			SDA=0;
		Delay10us();
    	SCL=1;
		Delay10us();
    	SCL=0;
   	 	I2C_dat=I2C_dat<<1;
		Delay10us();
  }
	SDA=1;	
	Delay10us();
    SCL=1;
	while(SDA)
	{
		a2++;
		if(a2>200)
		{
		    SCL=0;
			Delay10us();
		    a=0;
		    return;
		}	
	}
    SCL=0;
	Delay10us();
    a=1;
    return;
}

void Read8Bit()
{

	SDA=1;	
	Delay10us();
	a3=0;
	SDA_C=0;
	Delay10us();

	    while(a3<8)
		{
			a3++;
			SCL=1;
			Delay10us();
			I2C_dat=I2C_dat<<1;
			if(SDA)
				I2C_dat_0=1;
			else
				I2C_dat_0=0;
			SCL=0;
			Delay10us();
		}
	SDA_C=1;
	Delay10us();


	a=I2C_dat;
	return;
}

void save_comval()
{
		disgint;
		Start();
		I2C_dat=0xa0;
		Write8Bit();
		I2C_dat=0x00;
		Write8Bit();

		I2C_dat=download_init_A5;     
		Write8Bit();

		I2C_dat=IR_LED_ON_F;     
		Write8Bit();

		I2C_dat=led_mode;     
		Write8Bit();

		I2C_dat=led_speed; 
		Write8Bit();

		I2C_dat=led_level_count;
		Write8Bit();

		I2C_dat=RTC_Color_mode; 
		Write8Bit();

		I2C_dat=RTC_mode_10_count;     
		Write8Bit();

		I2C_dat=g_comval_sensitivity;     
		Write8Bit();
		Stop();		

		engint;
}

void read_comval()
{
		disgint;
		Start();
		I2C_dat=0xa0;
		Write8Bit();
		I2C_dat=0x00;
		Write8Bit();

		Start();
		I2C_dat=0xa1;
		Write8Bit();

		Read8Bit();
		download_init_A5	=a;
		ACK();

		Read8Bit();
		IR_LED_ON_F	=a;   // led_level led_speed
		ACK();

		Read8Bit();
		led_mode	=a;   // led_level led_speed
		ACK();

		Read8Bit();
		led_speed	=a;   // led_level led_speed
		ACK();

		Read8Bit();
		led_level_count	=a;   // led_level led_speed
		ACK();

		Read8Bit();
		RTC_Color_mode	=a;   // led_level led_speed
		ACK();

		Read8Bit();
		RTC_mode_10_count	=a;   // led_level led_speed
		ACK();

		Read8Bit();
		g_comval_sensitivity	=a;   // led_level led_speed 
		ACK();

		Stop();	

		engint;
}

