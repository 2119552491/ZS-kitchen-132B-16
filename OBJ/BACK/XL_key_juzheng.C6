							IR_KEY_L_deal = 0;
						#endif
						#if XL_24C02		   
							save_step = 1;//save_comval();
						#endif
					}
					Key2_tick = 0;
					#if XL_key_2_long // #endif
						KEY_long_time_F2 = 0;
					#endif
				}
			#endif
		}
