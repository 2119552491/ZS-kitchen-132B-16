						#endif
						#if XL_24C02		   
							save_step = 1;//save_comval();
						#endif
					}

					Key3_tick = 0;
					#if XL_key_3_long // #endif
						KEY_long_time_F3 = 0;
					#endif
				}
			#endif

			#if XL_key_4
