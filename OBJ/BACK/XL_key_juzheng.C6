								KEY_long_time_F4 = 1;
								IR_KEY_L_deal = 203;
							}
						#endif
					}
				}
				else
				{
					if (  Key4_tick >= Key_short_time   )  
					{
						//short_mode_init_F = 1;
						#if XL_key_4_long // #endif
							if ( KEY_long_time_F4 == 0 )
						#endif
