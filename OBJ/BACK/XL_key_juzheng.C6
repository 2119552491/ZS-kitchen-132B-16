								short_key_sub();
								IR_KEY_L_deal = 0;
							}
						#if XL_key_4_long // #endif
							IR_KEY_L_deal = 0;
						#endif
						#if XL_24C02		   
							save_step = 1;//save_comval();
						#endif
					}
					Key4_tick = 0;
					#if XL_key_4_long // #endif
						KEY_long_time_F4 = 0;
					#endif
				}
			#endif
		break;
		}
